{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "declaration": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "jsx": "preserve",
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"],
    "module": "esnext",
    "moduleResolution": "node",
    "outDir": "../library/dist/vue3/src",
    "paths": {
      "@/*": ["../library/src/*"]
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "esnext",
    "types": ["node", "vite/client"],
    "useDefineForClassFields": false
  },
  "include": [
    "../library/src/**/*.ts",
    "../library/src/**/*.d.ts",
    "../library/src/**/*.vue"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "../design-system/src/testing",
    "../design-system/src/**/*.spec.ts"
  ]
}
